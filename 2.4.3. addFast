void addFast(){
    repeat(8){
        //1+1
        if(onBeeper()&&beeperAhead()){
            moveForward();
            if(beeperAhead()){//1+1+1
                addOne();
                nextWithCarry();
            }else{ //1+1+0
                addNone();
                nextWithCarry();
            }
        }
        //1+0
        else if(onBeeper()&&!beeperAhead()){
            moveForward();
            if(beeperAhead()){//1+0+1
                addNone();
                nextWithCarry();
            }else{//1+0+0
                addOne();
                nextWithoutCarry();
            }
        }
        //0+0
        else if(!onBeeper()&&!beeperAhead()){
            moveForward();
            if(beeperAhead()){//0+0+1
                addOne();
                nextWithoutCarry();
            }else{//0+0+0
                addNone();
                nextWithoutCarry();
            }
        }
        //0+1
        else if(!onBeeper()&&beeperAhead()){
            moveForward();
            
            if(beeperAhead()){//0+1+1
                addNone();
                nextWithCarry();
            }else{//0+1+0
                addOne();
                nextWithoutCarry();
            }
        }
    }
} 
void walkBack(){
    while(frontIsClear()){
        moveForward();
    }
    turnAround();
}
void addNone(){
    moveForward();
    moveForward();
}
void nextWithCarry(){
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    dropBeeper();
    walkBack();
}
void addOne(){
    moveForward();
    moveForward();
    dropBeeper();
}
void nextWithoutCarry(){
    turnRight();
    moveForward();
    turnRight();
    walkBack();
}
