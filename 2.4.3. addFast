void addFast(){
    repeat(8){
        if(onBeeper()&&beeperAhead()){//1+1
            moveForward();
            moveForward();
            if(onBeeper()){//1+1+1
                addOne();
                nextWithCarry();
            }else{ //1+1+0
                moveForward();
                nextWithCarry();
            }
        }
        else if(onBeeper()){//1+0
            moveForward();
            moveForward();
            if(onBeeper()){//1+0+1
                moveForward();
                nextWithCarry();
            }else{//1+0+0
                addOne();
                nextWithoutCarry();
            }
        }
        else if(!onBeeper()&&!beeperAhead()){ //0+0
            moveForward();
            moveForward();
            if(onBeeper()){//0+0+1
                addOne();
                nextWithoutCarry();
            }else{//0+0+0
                addNone();
                nextWithoutCarry();
            }
        }
        else if(!onBeeper()&&beeperAhead()){//0+1
            moveForward();
            moveForward();
            if(onBeeper()){//0+1+1
                moveForward();
                nextWithCarry();
            }else{//0+1+0
                addOne();
                nextWithoutCarry();
            }
        } 
        moveForward();
        moveForward();
        turnAround();
    }
} 
void nextWithCarry(){
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    dropBeeper();
}
void addOne(){
    moveForward();
    dropBeeper();
}
void nextWithoutCarry(){
    turnRight();
    moveForward();
    turnRight();
    moveForward();
}
